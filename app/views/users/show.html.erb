<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <h1>
        <%= gravatar_for @user %>
        <%= @user.name %>
      </h1>
      <span class="timestamp">
      Signed up <%= time_ago_in_words(@user.created_at) %> ago.
      </span>
    </section>
  </aside>
  <div class="panel-body bar col-md-8">
    <h2 class = "bar"><span class="label label-info">名前</span>　　　　　 　<%= @user.name %></h2>
    <h2 class = "bar"><span class="label label-info">Email</span>　　　　　　<%= @user.email %></h2>
    <h2 class = "bar"><span class="label label-info">プロフィール</span>　　 　<%= @user.personal_info %></h2>
    <h2 class = "bar"><span class="label label-info">住所</span>　　　　　 　<%= @user.address %></h2>
  </div>
  <br>
  <div class="col-md-12">
    <%= render 'follow_form' if logged_in? %>
    <% if @user.microposts.any? %>
      <h3>Microposts (<%= @user.microposts.count %>)</h3>
      <ol class="microposts">
        <%= render @microposts %>
      </ol>
    <% end %>
  </div>
</div>