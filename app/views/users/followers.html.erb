<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <h1>
        <%= gravatar_for @user %>
        <%= @user.name %>
      </h1>
    </section>
  </aside>
  <div class="panel-body bar col-md-8">
    <h2 class = "bar"><span class="label label-info">名前</span>　　　　　 　<%= @user.name %></h2>
    <h2 class = "bar"><span class="label label-info">Email</span>　　　　　　<%= @user.email %></h2>
    <h2 class = "bar"><span class="label label-info">プロフィール</span>　　 　<%= @user.personal_info %></h2>
    <h2 class = "bar"><span class="label label-info">住所</span>　　　　　 　<%= @user.address %></h2>
  </div>
  <br>
  <div class="col-md-12">
    <% if @user.follower_users.any? %>
      <h3>followers (<%= @user.follower_users.count %>)</h3>
      <% @followers.each do |u| %>
      <div class="panel-body bar col-md-8">
      <%= gravatar_for u %>
      <h2 class = "bar"><span class="label label-info">名前</span>　　　　　 　<%= u.name %></h2>
      <h2 class = "bar"><span class="label label-info">プロフィール</span>　　 　<%= u.personal_info %></h2>
      <div class="col-md-2">
            <%= render 'follow_form' if logged_in? %>
      </div>
      </div>
      <% end %>
    <% end %>
  </div>
</div>